
@{
	Layout = null;
}

<!DOCTYPE html>

<html>
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>..:: [ Admin Template ] ::..</title>
	<link href="~/css/mdb.min.css" rel="stylesheet" />
	<link href="~/css/style.css" rel="stylesheet" />
	<link rel="stylesheet" href="~/css/site.css" />
	<link href="~/css/all.css" rel="stylesheet" />
	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/js/sweetalert2@9.js"></script>
	<script src="~/js/ShowMessage.js"></script>
	<style>
		#divLogin {
			position: absolute;
			top: 17%;
			bottom: 0;
			content: '';
			width: 300px;
			height: 400px;
		}

		.contenedor {
			border-radius: 10px;
			border: 5px solid #0000ff24;
			box-shadow: 6px 7px 7px 1px #0000005e;
		}

		.footer-page {
			position: absolute;
			bottom: 0px;
			width: 100%;
			height: 50px;
			margin: 0 auto;
		}

		h6 {
			font-size: 12px;
		}

		.video-container {
			height: 100vh;
			width: 100%;
			overflow: hidden;
			position: relative;
		}

		video {
			min-width: 100%;
			min-height: 100%;
			position: absolute;
		}
	</style>

</head>
<body class="bg-dark" style="overflow:hidden;">
	<div class="splash" style="z-index:2;overflow:hidden;">
		<div class="video-container">
			<video autoplay muted loop>
				<source src="~/videos/Lines.mp4" type="video/mp4">
			</video>
		</div>
		<div class="text-white display-4" style="z-index:1000;top:10%; position:absolute;width:100%; text-align:center;">
			<img class="jumping" src="~/images/logo.png" />
			<div class="text-white mt-5"><h6 class="text-white">Cargando...</h6></div>
			<div><h1>Bienvenidos a mi Template Demo</h1></div>
			<h4>Desarrollado por: <a href="#" title="Orlando Pinto">Orlando Pinto</a></h4>
		</div>
	</div>
	<div id="content" class="invisible" style="z-index:0;">
		<div id="particles-js" class="container-fluid w-100 morpheus-den-gradient color-block d-flex justify-content-center align-items-center" style="height:100vh;">
			<div id="divLogin" class="">
				<div>
					<form action="/" method="post">
						<div class="container bg-white color-block contenedor">
							<img src="~/images/logo.png" class="py-3" />
							<h2 class="text-center">Iniciar sesión</h2>
							<div class="md-form">
								<input id="name" type="text" name="name" value="" class="form-control" />
								<label for="name">Usuario</label>
							</div>
							<div class="md-form">
								<input id="password" type="password" name="password" value="" class="form-control" />
								<label for="password">Contraseña</label>
							</div>
							<div class="text-center  pb-3">
								<button type="submit" class="btn btn-primary btn-sm">Conectar</button>
							</div>
						</div>
					</form>
				</div>
			</div>
			<div class="footer-page text-center text-white d-flex justify-content-end align-items-end pr-5 my-2 ">
				<img src="~/images/logo.png" style="width:85px;" />
				<h6>Diseñado por:&nbsp;&nbsp;</h6>
				<h6>Orlando Orlando</h6>
			</div>
		</div>
	</div>
	<script src="~/js/particles.min.js"></script>
	<script src="~/js/particle.js"></script>
	<script>
		$(document).ready(function () {

			setTimeout(function () {
				$('.splash').hide();
				$('#content').removeClass('invisible').addClass('visible');
			}, 5000);
		});
	</script>
</body>
</html>
